@import './index.styl'

body
    background-color: #efefef
.per-header
    width: auto
    height: auto
    padding: 15px
    background-color: #7caf49
    h1.form-line
        color = #fff
        lh = 36px
        text-align: center
        color: color
        font-size: 18px
        height: lh
        line-height: (lh + 20)
        font-weight: 400
        .s-datepicker
            display: block
            width: 40%
            height: lh
            line-height: lh
            border-bottom: 1px solid color
            font-weight: 500
            font-size: 22px
            text-align: center
            .sm-text
                font-size: 14px
                font-weight: 300
        .left
            float: left
        .right
            float: right
    .btn-search
        display: block
        position: relative
        top: 7px
        margin: 5px auto
        btn(28px, #e4e9de)
        color: #999
        width: 120px
        height: h = 28px
        line-height: h
        border-radius: 5px
        background-color: #e4e9de
        color: #999
        font-size: 16px
        text-align: center
.wrapper    
    width: auto;
    height: auto;
    padding: 16px
    box-sizing: border-box
    &::after
        content: " "
        display: block
        clear: both
    .list-box
        width: 49.999999%
        height: auto
        float: left
        list-style: none
        li
            list-style: none
    .left-nav
        lasth = 82px
        hh = 70px
        sub = (lasth - hh)
        position: relative
        border-radius: 5px
        box-shadow: 0 0 20px #aaa 
        background-color: #fff
        height: (hh * 4 + 5 * 2)
        .nav-item
            position: absolute
            line-height: hh
            width: 100%
            background-color: #fff
            left: 0
            z-index: 10
            &:nth-child(1)
                top: 5px
            &:nth-child(2)
                top: ((hh + 1) * 1 + 5px)
            &:nth-child(3)
                top: ((hh + 1) * 2 + 5px)
            &:nth-child(4)
                top: ((hh + 1) * 3 + 5px)
        .nav-item.active
            position: absolute
            height: lasth
            line-height: lasth
            width: 107%
            background-color: #fff
            border-radius: 5px
            box-shadow: 0 0 15px #bbb
            left: -3.5%
            z-index: 100
            .item-content
                height: lasth
                line-height: lasth
                border-bottom: none
                .icon
                    height: lasth
                    line-height: lasth
                    -webkit-transform: scale(1.1)
                    transform: scale(1.1);
                .multi-text, .single-text
                    height: lasth
                    line-height: lasth
                .multi-text
                    .box
                        padding: (18 + sub/2) 0
                        .title
                            color: #666
                .single-text
                    .title
                        height: lasth
                        line-height: lasth
                        color: #666
            &::after
                len = 8px
                content: " "
                display: block
                position: absolute
                right: -(len * 2 - 1)
                top: 50%
                margin-top: -(len)
                height: 0
                width: 0
                border-top: len solid transparent
                border-left: len solid #fff
                border-bottom: len solid transparent
                border-right: len solid transparent
        .nav-item
            &:nth-child(1)
                .icon
                    background-image: url('../images/icon/daodianrenshu-icon@2x.png')
            &:nth-child(2)
                .icon
                    background-image: url('../images/icon/chengjiao-icon@2x.png')
            &:nth-child(3)
                .icon
                    background-image: url('../images/icon/zuoxiqingkuang-icon@2x.png')
            &:nth-child(4)
                .icon
                    background-image: url('../images/icon/zuoxiqingkuang-icon@2x.png')
            
            &:nth-child(1).active
                top: (5 - sub/2)
                .icon
                    background-image: url('../images/icon/jindianrenshu-icon@2x.png')
            &:nth-child(2).active
                top: (hh - sub/2 + 6)
                .icon
                    background-image: url('../images/icon/chengjiaoliang.png')
            &:nth-child(3).active
                top: (hh * 2 - sub/2 + 7)
                .icon
                    background-image: url('../images/icon/zhuli-icon@2x.png')
            &:nth-child(4).active
                top: (hh * 3 - sub/2 + 6)
                .icon
                    background-image: url('../images/icon/zhuli-icon@2x.png')
        .item-content
            height: h = 70px
            line-height: h
            width: auto
            height: auto
            margin: 0 10px
            box-sizing: border-box
            border-bottom: 1px solid #ccc
            &::after
                content: " "
                display: block
                clear: both
            .icon
                width: 34.99999%
                height: h
                line-height: h
                vertical-align: middle
                text-align: center
                float: left
                background-repeat: no-repeat
                background-size: contain
                background-position: center center
                img
                    height: 35px
                    vertical-align: middle
            .single-text, .multi-text
                height: h
                width: 65%
                float: left
            .single-text
                .title
                    height: h
                    line-height: h
                    font-size: 18px
                    color: #999
                    text-align: right
            .multi-text
                mp = 18px
                .box
                    height: auto
                    width: auto
                    padding: mp 0
                    vertical-align: middle
                .title
                    height: 20px
                    line-height: 20px
                    text-align: right
                    font-size: 18px
                    color: #999
                .scribe
                    height: 18px
                    line-height: 18px
                    text-align: right
                    font-size: 12px
                    color: #bbb

        .item:last-child .item-content
            border-bottom: none
    .right-content
        height: auto 
        float: left
        .item   
            display: none
            width: auto
            height: auto
            padding: 15px 0 15px 15px
            &:first-child
                display: block
            .cell
                height: auto
                padding-bottom: 10px
                .title
                    margin: 2px 0 8px 0;
                    text-align: center
                    color: #999
                    .icon
                        display: inline-block
                        vertical-align: top
                        width: 30px
                        height: 28px
                        background-image: url('../images/icon/dache-icon@2x.png')
                        background-repeat: no-repeat
                        background-size: contain
                        background-position: center center
                        transform: scale(1.5);
                        &.xiaoche
                            background-image: url('../images/icon/xiaoche-icon@2x.png')
                    .name
                        margin-left: 6px
                        font-size: 16px
                        line-height: 28px
                        font-weight: 400
                .content
                    color: #7caf49
                    text-align: center
                    .big-num
                        line-height: 84px
                        font-size: 86px
                        font-weight: 700
                    .unit
                        line-height: 36px
                        font-size: 18px
.chart-box
    min-height: 180px
    height: auto
    width: auto 
    margin: 0 16px 16px 16px
    background-color: #fff
    border-radius: 5px
    box-shadow: 0 0 15px #999
                        




            

    